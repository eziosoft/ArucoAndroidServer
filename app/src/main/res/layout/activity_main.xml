<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:opencv="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:id="@+id/camera_view"
            opencv:show_fps="true"
            opencv:camera_id="1"
        />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp" android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:textColor="#0FF"/>

    <CheckBox
        android:id="@+id/calB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="CAL"
        android:textColor="#FFF"
        tools:textColor = "#000"/>

    <CheckBox
        android:id="@+id/tryCalB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_toLeftOf="@id/calB"
        android:layout_toEndOf="@+id/calB"
        android:text="try cal"
        android:textColor="#FFF"
        tools:textColor="#000" />

    <Button
        android:id="@+id/captureB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tryCalB"
        android:text="capture" />
</RelativeLayout>